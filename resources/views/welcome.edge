<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AdonisJS - A fully featured web framework for Node.js</title>
  @entryPointStyles('app')
  @entryPointScripts('app')
</head>

<body>
  <header>
    <section class="sectionHeader">
      <a href="/" class="aMain">
        <img class="img1" src="/EFA.png" alt="Logo EFA">
      </a>
      <div class="divPrepa">
        <div id="animation" class="title">
          <span></span>
          <span></span>
          <span></span>
          <span></span>
          <h1>Soyez sûr de vos sources !</h1>
        </div>
      </div>
      <div class="divDroite">
      </div>
    </section>
  </header>
  <main>
    <form class="section_search" action="" method="GET" id="searchbox" >
      <div class="imput_search">
        <input class="search_bar" type="text" type="search" name="q" placeholder="saisissez un mot clés ..." maxlength="20" autocomplete="off"
          required />
        <button type="submit" class="submit" id = "button-submit">
          &#128269;</button>
      </div>
      <div class="filter_search">
        <div>
          <label>Langage souhaité :</label>
          <select name="lang" id="lang">
            <option value="fr">Français</option>
            <option value="en">Anglais</option>
            <option value="es">Espagnol</option>
            <option value="al">Allemand</option>
          </select>
        </div>
        <div>
          <label for="max">Nombre d'articles attendus (1-100) :</label>
          <input type="number" id="max" name="max" min="1" max="100">
        </div>
        <div>
          <label>Trier par :</label>
          <select name="sortby" id="sortby" required>
            <option value="revelance">Pertinence</option>
            <option value="publishedAt">Date de publication</option>
          </select>
        </div>
      </div>

    </form>
    @if(datas.length==0)
    <p style="text-align: center">Aucun resultat trouvé</p>
    @else
    <section class="section_list">
      @each(data in datas)
      <div class="article">
        <div>
          <img src="{{data.image}}" alt="" width="100" height="100">
        </div>
        <div class="content_article">
          <span class="span">Titre :</span>
          <a href="{{ data.url }}" target="_blank">{{ data.title }}</a>
          <span class="span">Description :</span>
          <p>{{data.description}}</p>
          <span> Date de publication :</span>
          <span class="span"> {{data.publishedAt}}</span>
        </div>
      </div>
      @end

    </section>
    @end

  </main>

  <script defer>
    addEventListener('load', onload);
    const animation = document.querySelector('#animation')
    onload = (event) => {
  animation.classList.add("animation")
  setTimeout(()=>{
    animation.classList.remove("animation")
  },2000)
};
  </script>
</body>
<footer>
  <div class="nos_reseaux">
    <div>
      <a href="https://twitter.com/EpsiFake" target="blank">
      <img src="https://www.logitheque.com/wp-content/uploads/sites/4/2019/06/3089.png" alt="lien tweeter" width="45vw" height="40vh"/>
    </div>
    
    <div>
      <a href="https://instagram.com/epsifakeanalitycs?igshid=YmMyMTA2M2Y=" target="blank" class="insta">
      <img src="https://fr.followersnet.com/wp-content/uploads/2019/01/Instagram.png" alt="lien insta" width="80vw" height="80vh"/>
    </div>
    
  </div>
</footer>
</html>
